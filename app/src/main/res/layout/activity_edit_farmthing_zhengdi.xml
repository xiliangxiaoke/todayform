<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#46A05A"
        android:layout_height="@dimen/titleheight">

        <TextView
            android:text="编辑农事记录"
            android:textSize="@dimen/title_text_size"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--return-->
        <TextView
            android:id="@+id/back"
            android:gravity="center"
            android:text="@string/icon_back"
            android:textColor="#ffffff"
            android:layout_width="@dimen/titleheight"
            android:layout_height="@dimen/titleheight" />

        <!--edit-->
        <TextView
            android:id="@+id/edit"
            android:gravity="center"
            android:text="@string/icon_yes"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/titleheight"
            android:layout_height="@dimen/titleheight" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/linearlayout_divider"
            android:orientation="vertical"
            android:showDividers="middle">
            <!--field-->
            <TextView
                android:id="@+id/fieldname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-" />

            <!--crop-->
            <TextView
                android:id="@+id/cropInfo"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"

                />

            <!--zhengdi type-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="整地方式：" />

                <EditText
                    android:id="@+id/zhengditype"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/form_key_width" />
            </RelativeLayout>

            <!--zhengdi car head-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="整地车头：" />

                <EditText
                    android:id="@+id/carhead"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/form_key_width" />
            </RelativeLayout>

            <!--zhengdi mechine-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="整地机械：" />

                <EditText
                    android:id="@+id/mechine"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/form_key_width" />
            </RelativeLayout>

            <!-- time region-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="整地时间：" />

                <TextView
                    android:id="@+id/starttime"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/form_key_width" />

                <TextView
                    android:id="@+id/selectstarttime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_login_bg"
                    android:layout_marginRight="10dp"
                    android:text="选择" />

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="60dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="结束时间：" />

                <TextView
                    android:id="@+id/endtime"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/form_key_width"
                    android:layout_marginTop="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/selectendtime"
                    android:background="@drawable/button_login_bg"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="70dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:text="选择" />
            </RelativeLayout>

            <!--deep-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="深度：" />

                <EditText
                    android:id="@+id/deepth"
                    android:background="@null"
                    android:inputType="number|numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/form_key_width" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="(厘米)" />
            </RelativeLayout>

            <!--price-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="亩成本：" />

                <EditText
                    android:id="@+id/pricepermu"
                    android:background="@null"
                    android:inputType="number|numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/form_key_width" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="(元)" />

                <TextView
                    android:layout_width="@dimen/form_key_width"
                    android:layout_height="60dp"
                    android:layout_marginTop="60dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="总费用：" />

                <EditText
                    android:id="@+id/priceall"
                    android:background="@null"
                    android:inputType="number|numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/form_key_width"
                    android:layout_marginTop="60dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="60dp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text="(元)" />
            </RelativeLayout>


            <!-- log-->
            <EditText
                android:minHeight="60dp"
                android:paddingLeft="10dp"
                android:id="@+id/beizhu"
                android:background="@null"
                android:hint="请输入备注信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--现场图片-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:text="现场图片"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <com.today.todayfarm.customView.PicHorizentalList
                    android:id="@+id/pics"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </RelativeLayout>

            <!--DELETE-->
            <TextView
                android:id="@+id/delete"
                android:text="删除"
                android:textColor="#f77878"
                android:gravity="center"
                android:textSize="@dimen/delete_btn_txt_size"
                android:layout_width="match_parent"
                android:layout_height="100dp" />


        </LinearLayout>

    </ScrollView>



</RelativeLayout>